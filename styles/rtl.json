{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "RTL",
	"settings": {
		"appearanceTools": true,
		"shadow": {
			"presets": [
				{
					"name": "Noon Solid",
					"slug": "noon-solid",
					"shadow": "8px 8px 0px var(--wp--preset--color--accent);"
				},
				{
					"name": "Noon",
					"slug": "noon",
					"shadow": "0px -1px 3px rgba(37, 38, 39, 0.01),0px 1px 2px -5px rgba(37, 38, 39, 0.03),0px 2px 5px -5px rgba(37, 38, 39, 0.05),0px 4px 12px -5px rgba(37, 38, 39, 0.06),0px 12px 15px -5px rgba(27, 34, 50, 0.07)"
				}
			]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "Readex Pro, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif",
					"name": "heading",
					"slug": "heading",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Readex Pro",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": ["file:./assets/fonts/ReadexPro.woff2"]
						}
					]
				},
				{
					"fontFamily": "Readex Pro, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif",
					"name": "body",
					"slug": "body",
					"fontFace": [
						{
							"fontDisplay": "block",
							"fontFamily": "Readex Pro",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "100 900",
							"src": ["file:./assets/fonts/ReadexPro.woff2"]
						}
					]
				},
				{
					"fontFamily": "ui-serif, serif",
					"name": "Serif",
					"slug": "serif"
				}
			]
		}
	}
}
