{
    "name": "thenoon",
    "private": true,
    "version": "1.0.0",
    "description": "The Noon is a Block WordPress theme",
    "author": {
        "email": "contact@noonwp.comp",
        "name": "NoonWP",
        "url": "https://noonwp.com"
    },
    "license": "GPL-3.0",
    "prettier": "@wordpress/prettier-config",
    "dependencies": {
        "@wordpress/postcss-plugins-preset": "^4.30.0",
        "typescript": "^4.9.5"
    },
    "devDependencies": {
        "@babel/core": "^7.23.3",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@types/node": "^20.9.1",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@wordpress/eslint-plugin": "^14.12.0",
        "@wordpress/prettier-config": "^2.25.13",
        "@wordpress/scripts": "^25.5.1",
        "babel-loader": "^9.1.3",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-react": "^7.33.2",
        "glob": "^10.3.10",
        "mini-css-extract-plugin": "^2.7.6",
        "open-props": "^1.6.12",
        "postcss": "^8.4.31",
        "postcss-calc": "^8.2.4",
        "postcss-cli": "^10.1.0",
        "postcss-dima-rtl": "^0.0.3",
        "postcss-import": "^15.1.0",
        "postcss-inline-svg": "^6.0.0",
        "postcss-jit-props": "^1.0.14",
        "postcss-loader": "^7.3.3",
        "postcss-media-minmax": "^5.0.0",
        "postcss-mixins": "^9.0.4",
        "postcss-nested": "^6.0.1",
        "postcss-preset-env": "^7.8.3",
        "postcss-scss": "^4.0.9",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "^2.8.8",
        "style-loader": "^3.3.3",
        "ts-loader": "^9.5.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-fix-style-only-entries": "^0.6.1",
        "webpack-remove-empty-scripts": "^1.0.4",
        "zip-webpack-plugin": "^4.0.1"
    },
    "scripts": {
        "dev": "wp-scripts start",
        "build": "tsc && wp-scripts build && pnpm wp:lang",
        "wp:format": "wp-scripts format",
        "lint:css": "wp-scripts lint-style",
        "lint:js": "wp-scripts lint-js",
        "lint": "eslint \"assets/**/*.{js,tsx,jsx}\" --quiet",
        "zip": "rm -rf zip && ./node_modules/.bin/webpack --config ./webpack.comp.config.js --mode production",
        "lint:pkg-json": "wp-scripts lint-pkg-json",
        "packages-update": "wp-scripts packages-update",
        "test:e2e": "wp-scripts test-e2e",
        "test:unit": "wp-scripts test-unit-js",
        "wp:pot:create": "wp i18n make-pot . languages/thenoon.pot",
        "wp:ar:po:create": "msginit --input=languages/thenoon.pot --output=languages/thenoon-ar.po --no-translator",
        "wp:ar:mo": "msgfmt languages/thenoon-ar.po -o languages/thenoon-ar.mo",
        "wp:ar:po:update": "wp i18n update-po languages/thenoon.pot && pnpm wp:ar:mo",
        "wp:lang": "pnpm wp:pot:create && pnpm wp:ar:po:update"
    }
}
